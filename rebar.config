{erl_opts, [debug_info]}.

{deps, [
    {lfe, {git, "http://github.com/lfe/lfe", {tag, "2.0"}}},
    {ltest, {git, "http://github.com/lfex/ltest", {tag, "0.12.0"}}},
    {proper, {git, "https://github.com/proper-testing/proper", {tag, "v1.3"}}}

]}.

{plugins, [
    {rebar3_proper, {git, "https://github.com/ferd/rebar3_proper", {tag, "0.12.1"}}}
]}.

{xref_checks,[
    undefined_function_calls,undefined_functions,locals_not_used,
    deprecated_function_calls,deprecated_functions
]}.

{profiles, [
    {test, [
        {deps, [
            {proper, {git, "https://github.com/proper-testing/proper", {tag, "v1.3"}}}
        ]},
        {plugins, [
            {rebar3_proper, {git, "https://github.com/ferd/rebar3_proper", {tag, "0.12.0"}}}
        ]},
        {eunit_opts, [verbose]}
    ]}
]}.

{alias, [
    {coverage, [
        {proper, "-c"},
        {cover, "-v --min_coverage=0"}
    ]},
    {check, [
        compile,
        %%xref,
        %%dialyzer,
        eunit,
        coverage
    ]}
]}.